EXTDIR= path to external modules

GXX_WARNING_OPTS=" \
    -Wall \
    -Wunused \
    -Wmissing-include-dirs \
    -Wcast-align \
    -Wno-sign-compare \
    -Wno-unused-parameter"

# additional -W flags for g++ which will lead to many warnings
#    -Wextra \
#    -Wfloat-equal \
#    -Wstrict-overflow \

GXX_OPTS=" \
    -fno-strict-aliasing \
    -fstrict-overflow \
    -fno-finite-math-only \
    -O3 \
    -march=native \
    -DNDEBUG=1"

# configure flags
CMAKE_FLAGS=" \
  -DUG_DIR=$EXTDIR/ug-3.12.1\
  -DCMAKE_CXX_FLAGS=\"$GXX_WARNING_OPTS $GXX_OPTS\" \
  "

# optional configure flags
# for the CO2 and CO2ni tests enable the experimental grid extension
# and make sure the module dune-alugrid is present
# -DDUNE_GRID_EXPERIMENTAL_GRID_EXTENSIONS=TRUE \

# for using gstat
# -DGSTAT_ROOT=gstat_installation_path \
